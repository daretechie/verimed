              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"REJECTED\",\n  \"reason\": \"Invalid or expired license documentation\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/verify/{{transactionId}}/review",
              "host": ["{{baseUrl}}"],
              "path": ["verify", "{{transactionId}}", "review"]
