          }
        },
        {
          "name": "Get Verification Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-api-key",
                "value": "{{apiKey}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/verify/{{transactionId}}",
              "host": ["{{baseUrl}}"],
