            }
          }
        },
        {
          "name": "Administrative Review (Approve)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "x-api-key",
                "value": "{{apiKey}}"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"VERIFIED\",\n  \"reason\": \"Documents validated manually\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/verify/{{transactionId}}/review",
              "host": ["{{baseUrl}}"],
              "path": ["verify", "{{transactionId}}", "review"]
            }
          }
        },
        {
          "name": "Administrative Review (Reject)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "x-api-key",
                "value": "{{apiKey}}"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              },
              {
                "key": "Content-Type",
