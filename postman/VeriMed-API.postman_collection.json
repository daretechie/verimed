                  "    pm.collectionVariables.set('transactionId', jsonData.transactionId);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "x-api-key",
                "value": "{{apiKey}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"providerId\": \"us-provider-001\",\n  \"countryCode\": \"US\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Smith\",\n  \"licenseNumber\": \"1234567890\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/verify",
              "host": ["{{baseUrl}}"],
              "path": ["verify"]
            }
          }
