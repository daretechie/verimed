################################################################################
# VERIMED ENVIRONMENT TEMPLATE
# CRITICAL SECURITY WARNING: 
# 1. NEVER commit your actual .env file to version control.
# 2. DO NOT use the default values below in production.
# 3. Generate secure keys using 'npm run generate-secrets'.
################################################################################

# Application Port
PORT=3000

# Security (CRITICAL: Change for production)
# Use 'openssl rand -base64 32' to generate strong keys
API_KEY=verimed-secret-change-me
JWT_SECRET=verimed-jwt-secure-secret-2025-change-me

# Admin Credentials (CRITICAL: Change for production)
ADMIN_USER=admin
# If password hashing is enabled, this should be the BCRYPT HASH
# Use 'npm run hash-password <your-password>' after implementation
ADMIN_PASS=verimed-admin-change-me

# Database Connection
# Leave empty to use SQLite (Local Development)
# For Postgres: postgres://user:pass@host:port/db
DATABASE_URL=

# Optional: Real AI Verification (OpenAI GPT-4o)
AI_API_KEY=

# AI Model Configuration (Optional)
# Complex verifications (cross-document) use AI_MODEL
# Simple verifications use AI_SIMPLE_MODEL (cost optimization)
AI_MODEL=gpt-4o-2024-08-06
AI_SIMPLE_MODEL=gpt-4o-mini

# AI Confidence Threshold
# Results below this threshold are automatically flagged for manual review
AI_CONFIDENCE_THRESHOLD=0.85

# Agent Security & Cost Control
# Daily budget in USD (API calls blocked if exceeded)
AI_DAILY_BUDGET=5.00
# Kill Switch: Set to 'true' to immediately block all AI agents
AI_KILL_SWITCH=false

# Redis Cache (Recommended for Production)
# If not set, falls back to in-memory cache
REDIS_URL=

# Registry API Keys
# Kenya (Intellex)
KE_INTELLEX_API_KEY=
# Mexico (RapidAPI)
MX_RAPIDAPI_KEY=
RAPIDAPI_HOST=cedulas-profesionales-sep.p.rapidapi.com

# Rate Limiting
# TTL in milliseconds, Limit is request count
THROTTLE_TTL=60000
THROTTLE_LIMIT=10

# CORS Configuration (Optional)
# Comma-separated list of allowed origins. Defaults to '*' if not set (INSECURE for production).
CORS_ORIGINS=https://app.verimed.com,https://api.verimed.com